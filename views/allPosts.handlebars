<div class='post-card'>
  {{#each posts}}
    <div class='post'>
      <h2>
        <a href='/post/{{id}}'>{{title}}</a>
      </h2>
      <div class='post-info'>
        <span>Posted by {{User.username}}</span>
        <span>on {{format_date createdAt}}</span>
      </div>
      <div class='post-body'>
        {{body}}
      </div>
    </div>
  {{/each}}
</div>